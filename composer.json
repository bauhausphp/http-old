{
  "name": "bauhaus/http",
  "description": "Implement HTTP interfaces defined on PSR-7 through TDD.",

  "type": "library",
  "license": "MIT",

  "keywords": [
    "bauhaus",
    "http",
    "psr7 implamentation"
  ],

  "authors": [
    {
      "name": "Felipe Martins",
      "homepage": "https://blog.fefas.net"
    }
  ],

  "support": {
    "issues": "https://github.com/bauhausphp/http/issues",
    "source": "https://github.com/bauhausphp/http"
  },

  "require": {
    "php": ">=7.1",
    "psr/http-message": "1.*"
  },

  "autoload": {
    "psr-4": {
      "Bauhaus\\Http\\": "src/"
    }
  },

  "require-dev": {
    "phpunit/phpunit": "^5.0"
  },

  "autoload-dev": {
    "psr-4": {
      "Bauhaus\\Http\\": [
        "tests/unit/"
      ]
    }
  }
}
