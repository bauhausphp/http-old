{
  "name": "bauhaus/http",
  "description": "Define and implement HTTP representations.",

  "type": "library",
  "license": "MIT",

  "keywords": [
    "bauhaus",
    "http"
  ],

  "authors": [
    {
      "name": "Felipe Martins",
      "homepage": "http://fefas.net"
    }
  ],

  "support": {
    "issues": "https://github.com/bauhausphp/package-http/issues",
    "source": "https://github.com/bauhausphp/package-http"
  },

  "require": {
    "php": ">=7.0",
    "psr/http-message": "1.*"
  },

  "autoload": {
    "psr-4": {
      "Bauhaus\\Http\\": "src/"
    }
  },

  "require-dev": {
    "phpunit/phpunit": "5.5.*"
  },

  "autoload-dev": {
    "psr-4": {
      "Bauhaus\\Http\\": [
        "tests/unit/"
      ]
    }
  }
}
